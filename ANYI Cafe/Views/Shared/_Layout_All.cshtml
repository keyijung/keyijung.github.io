<body class="la-ball-circus">
    <header>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse.collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>

                    <div class="navbar-collapse collapse">
                        <div class="navbar-brand">
                            <a href="http://localhost:5400/Home/Index"><img src="~/Company/Company/images/blog/Logo-Anyi Cafe.png" /></a>
                        </div>
                        <div class="menu">
                            <ul class="nav nav-tabs" role="tablist">
                                @if (UserAccount.Role == EnumList.LoginRole.Admin)
                                {
                                    @Html.Partial("~/Views/Shared/_PartialNavbarAdmin.cshtml")
                                    @Html.Partial("~/Views/Shared/_PartialNavbarCommon.cshtml")
                                }
                                else if (UserAccount.Role == EnumList.LoginRole.User)
                                {
                                    @Html.Partial("~/Views/Shared/_PartialNavbarUser.cshtml")
                                    @Html.Partial("~/Views/Shared/_PartialNavbarCommon.cshtml")
                                }
                                else
                                {
                                    <li role="presentation">@Html.ActionLink("首頁", "Index", "Home")</li>
                                    <li role="presentation">@Html.ActionLink("關於我們", "About", "Home")</li>
                                    <li role="presentation">@Html.ActionLink("啡比尋嚐", "Menu", "Home")</li>
                                    <li role="presentation">@Html.ActionLink("線上訂購", "Order", "Home")</li>
                                    <li role="presentation">@Html.ActionLink("聯繫我們", "Contact", "Home")</li>
                                    @*<li role="presentation"><a href="/Product/CartList"><span class="fa fa-shopping-cart"></span><span class="Car-Counts">@Cart.Counts</span></a></li>*@
                                    <li id="Cart">@Html.Partial("_CartPartial")</li>
                                    <li role="presentation"><a href="@Url.Action("Login", "User")"><i class="fa fa-user " aria-hidden="true"></i></a></li>
                                    <li id="menu-item"><a href="#section0">經典檸檬塔派</a></li>
                                    <li id="menu-item"><a href="#section1">瘋狂黑巧克力</a></li>
                                    <li id="menu-item"><a href="#section2">草莓華爾滋</a></li>
                                    <li id="menu-item"><a href="#section3">水洗中淺焙咖啡豆</a></li>
                                    <li id="menu-item"><a href="#section4">水洗深焙咖啡豆</a></li>
                                    <li id="menu-item" style="margin-bottom:10%"><a href="#section5">水洗淺焙咖啡豆</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main>@RenderBody()</main>


    <footer>
        <div class="footer">
            <div class="container">
                <div class="social-icon">
                    <div class="col-md-4">
                        <ul class="social-network">
                            <li><a href="#" class="fb tool-tip" title="Facebook"><i class="fa fa-facebook"></i></a></li>
