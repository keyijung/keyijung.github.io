@model ANYI_Cafe.Models.RegisterViewModel

@{
    ViewBag.Title = "會員註冊";
    Layout = "~/Views/Shared/_Layout_All.cshtml";
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/datepicker.js")"></script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row text-center" style="margin-top:200px">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 col-xl-4 col-xl-offset-4">

                <h4 class="text-dark text-center" style="margin-bottom:0px">會員註冊</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.uid)
                @Html.HiddenFor(model => model.uno)
                @Html.HiddenFor(model => model.urole)
                @Html.HiddenFor(model => model.uremark)
                @Html.HiddenFor(model => model.is_valid)
                @Html.HiddenFor(model => model.verifycode)

                <div class="form-group">
                    @Html.LabelFor(model => model.uemail, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.uemail, new { htmlAttributes = new { @class = "form-control", @placeholder = "電子信箱" } })
                    @Html.ValidationMessageFor(model => model.uemail, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.upw, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.upw, new { htmlAttributes = new { @class = "form-control", @placeholder = "密碼" } })
                    @Html.ValidationMessageFor(model => model.upw, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.uname, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.uname, new { htmlAttributes = new { @class = "form-control", @placeholder = "姓名" } })
                    @Html.ValidationMessageFor(model => model.uname, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ubirth, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.ubirth, new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = "出生日期" } })
                    @Html.ValidationMessageFor(model => model.ubirth, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.utel, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.utel, new { htmlAttributes = new { @class = "form-control", @placeholder = "手機號碼" } })
                    @Html.ValidationMessageFor(model => model.utel, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.uaddr, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.uaddr, new { htmlAttributes = new { @class = "form-control", @placeholder = "送貨地址" } })
                    @Html.ValidationMessageFor(model => model.uaddr, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom:250px; margin-top:50px">
                    <div class="text-center">
                        <input type="submit" value="確認" class="btn btn-primary" />
                        @Html.ActionLink("取消", "Login", "User", null, new { @class = "btn btn-info", onclick = "return confirm('是否確定取消註冊會員？點擊確定將返回登入頁')" })
                    </div>
                </div>

            </div>
        </div>
    </div>
}
